<%=l(:label_subject)%>: <%= mail.display_subject %>
<%=l(:label_sender)%>: <%= mail.sender_email %>
<%=l(:label_project)%>: <%= mail.target_project %>
<%=l(:label_received_on)%>: <%= format_time(mail.created_on) %>

<% unless mail.log_messages.blank? -%>
<%=l(:label_log_messages)%>:

<%= mail.log_messages %>
<% end -%>

<% unless mail.handled? -%>
<%=l(:label_error_message)%>: <%= mail.error_message %>
<% end -%>
